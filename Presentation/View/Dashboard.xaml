<UserControl x:Class="Presentation.View.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.View"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="690" d:DesignWidth="1110">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="{StaticResource Color9}" CornerRadius="12" Grid.Column="0">
            <StackPanel >
                <!-- Botones de adicion-->
                <StackPanel Height="60"
                            Orientation="Horizontal">
                    <Button Style="{StaticResource contentButton}" Tag="{StaticResource Color6}">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    >
                            <fa:ImageAwesome Icon="FolderOpen"  Style="{StaticResource contentButtonIcon}"/>
                            <TextBlock Text="Residuos" Style="{StaticResource contentButtonText}"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource contentButton}" Tag="{StaticResource Color6}">
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <fa:ImageAwesome Icon="PlusSquare"  Style="{StaticResource contentButtonIcon}"/>
                            <TextBlock Text="Registrar" Style="{StaticResource contentButtonText}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!--Tabla establecimientos-->
                <StackPanel Height="160"
                            Margin="0,12,0,0"
                            >
                </StackPanel>
            </StackPanel>
        </Border>
        <Border Grid.Column="1" CornerRadius="12" Margin="12,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <!--PANEL 1-->
                    <RowDefinition Height="100"/>
                    <!--PANEL 2 295-->
                    <RowDefinition Height="*"/>
                    <!--PANEL 3 295-->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Height="100" Background="{StaticResource Color9}" CornerRadius="12" Margin="0,0,10,0">
                            <StackPanel Orientation="Vertical">
                                <Border CornerRadius="12,12,0,0" Height="25" Background="{StaticResource Color8}">
                                    <TextBlock Text="Residuos No Peligrosos" Style="{StaticResource contentButtonText}" HorizontalAlignment="Center"  Foreground="White" VerticalAlignment="Center">

                                    </TextBlock>
                                </Border>
                                <StackPanel Orientation="Vertical">


                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>

                </StackPanel>
                
                <Border Background="{StaticResource Color9}" Grid.Row="1" CornerRadius="12" Margin="0,12,0,0">
                </Border>
                <Border Background="{StaticResource Color9}" Grid.Row="2" CornerRadius="12" Margin="0,12,0,0">
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
